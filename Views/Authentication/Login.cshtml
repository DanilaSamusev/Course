@using AccountingSystem.Models;
@model LoginModel;

<!DOCTYPE html>

<html>
<head>
    <title>Authentication</title>
    <link href="~/css/Authentication/login.css" type="text/css" rel="stylesheet"/>
    <link href="~/css/common.css" type="text/css" rel="stylesheet"/>
</head>
<body>

<div>
    <h1>Вход на сайт</h1>
</div>

<div>
    <form class="loginForm" method="post" action="~/Authentication/Login">   
        @if (Model != null && Model.AuthenticationError != null)
        {
            <p class="autMessage">@Model.AuthenticationError</p>
        }
        else
        {
            <p class="autMessage">Введите данные</p>
        }
        <input required placeholder="Логин" name="login" />       
        <input required class="input2" placeholder="Пароль" type="password" name="password"/>        
        <button type="submit">Войти</button>
    </form>
</div>

</body>
</html>